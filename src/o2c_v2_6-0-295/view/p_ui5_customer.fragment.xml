                                    class="statusIcon"
                                    color="{=${mDataModel>status} === 'Approved' ? '#00FF00' : ${mDataModel>status} === 'Save as Draft' ? 'blue' : 'orange'}"
                                    src="{=${mDataModel>status} === 'Approved' ? 'sap-icon://accept' : ${mDataModel>status} === 'Save as Draft' ? 'sap-icon://document' : 'sap-icon://lateness'}"
                                />
                            </HBox>
                        </VBox>
                    </HBox>
