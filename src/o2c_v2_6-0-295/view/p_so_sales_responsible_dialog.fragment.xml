<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Dialog title="Sales Responsible">
        <Table items="{mPageData>/preSalesAndResponsibleList}"
            itemPress="fnSalesResponsibleLineItemPress" width="400px">
            <columns>
                <Column>
                    <Text text="Employee ID" />
                </Column>
                <Column>
                    <Text text="Employee Name" />
                </Column>
            </columns>
            <ColumnListItem type="Active">
                <cells>
                    <Text class="sapUiTinyMarginBegin" text="{mPageData>emp_id}" />
                </cells>
                <cells>
                    <Text class="sapUiTinyMarginBegin" text="{mPageData>emp_name}" />
                </cells>
            </ColumnListItem>
        </Table>

        <buttons>
            <Button text="Cancel" press="fnValueHelpDialogPopupClose" />
        </buttons>
    </Dialog>


</core:FragmentDefinition>