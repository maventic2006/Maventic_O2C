<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Dialog title="Business Area">
        <Table items="{mPageData>/businessAreaList}"
            itemPress="fnBusinessAreaLineItemPress" width="400px">
            <columns>
                <Column>
                    <Text text="Business Code" />
                </Column>
                <Column>
                    <Text text="Business Name" />
                </Column>
            </columns>
            <ColumnListItem type="Active">
                <cells>
                    <Text class="sapUiTinyMarginBegin" text="{mPageData>business_code}" />
                </cells>
                <cells>
                    <Text class="sapUiTinyMarginBegin" text="{mPageData>business_name}" />
                </cells>
            </ColumnListItem>
        </Table>

        <buttons>
            <Button text="Cancel" press="fnValueHelpDialogPopupClose" />
        </buttons>
    </Dialog>


</core:FragmentDefinition>